{
  "name": "gemi",
  "version": "0.4.4",
  "devDependencies": {
    "@happy-dom/global-registrator": "^14.12.3",
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/bun": "^1.1.4",
    "@types/eslint": "^8.56.5",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "eslint": "^8.57.0",
    "happy-dom": "^14.12.3",
    "jsdom": "^24.1.0",
    "typescript": "^5.3.3",
    "vitest": "^1.6.0"
  },
  "bin": {
    "gemi": "./dist/bin/gemi"
  },
  "exports": {
    "./http": "./http/index.ts",
    "./client": "./client/index.ts",
    "./app": "./app/index.ts",
    "./facades": "./facades/index.ts",
    "./email": "./email/index.ts",
    "./vite": "./vite/index.ts",
    "./runtime": "./client/runtime.ts"
  },
  "files": [
    "dist/**/*"
  ],
  "private": false,
  "module": true,
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "build": "bun run build:core && bun run build:bin && bun run build:types && bun run build:client && bun run build:client-types",
    "build:core": "bun ./scripts/build.ts",
    "build:bin": "bun build --compile ./bin/gemi.ts --external vite --external react-dom --external react/jsx-runtime --outfile ./dist/bin/gemi",
    "build:client": "vite build",
    "build:types": "tsc",
    "build:client-types": "tsc -p tsconfig.browser.json",
    "test": "vitest",
    "prepublishOnly": "bun run build && bun scripts/setupExports.ts prod",
    "postpublish": "bun scripts/setupExports.ts dev"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "history": "^5.3.0",
    "react-email": "^2.1.4",
    "resend": "^3.2.0",
    "urlpattern-polyfill": "^10.0.0",
    "uuid": "^9.0.1"
  }
}
